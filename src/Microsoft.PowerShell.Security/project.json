{
    "name": "Microsoft.PowerShell.Security",
    "version": "1.0.0-*",
    "authors": [ "garretts", "andschwa" ],

    "buildOptions": {
        "warningsAsErrors": true,
        "allowUnsafe": true,
        "compile": {
            "include": [ "../windows-build/gen/Microsoft.PowerShell.Security/*.cs" ]
        }
    },

    "dependencies": {
        "System.Management.Automation": "1.0.0-*"
    },

    "frameworks": {
        "netstandard1.5": {
            "imports": [ "dnxcore50" ],
            "buildOptions": {
                "define": [ "CORECLR" ],
                "compile": {
                    "exclude": [
                        "security/CertificateCommands.cs",
                        "security/CmsCommands.cs",
                        "singleshell/installer/MshSecurityMshSnapin.cs"
                    ]
                }
            }
        },
        "net451": {
        }
    }
}
