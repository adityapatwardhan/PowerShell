{
    "name": "Microsoft.PowerShell.LocalAccounts",
    "version": "6.0.0-*",

    "buildOptions": {
        "xmlDoc": true,
        "keyFile": "../signing/visualstudiopublic.snk",
        "delaySign": true,
        "publicSign": false,
        "warningsAsErrors": true
    },

    "dependencies": {
        "System.Management.Automation": "6.0.0-*"
    },

    "configurations": {
        "Linux": {
            "buildOptions": {
                "define": [ "UNIX" ],
                "debugType": "portable"
            }
        },
        "Debug": {
            "buildOptions": {
                "debugType": "portable"
            }
        },
        "Release": {
            "buildOptions": {
                "debugType": "portable"
            }
        },
        "CodeCoverage": {
            "buildOptions": {
                "debugType": "full"
            }
        }
    },

    "frameworks": {
        "netstandard1.6": {
            "imports": [ "dnxcore50" ],
            "buildOptions": {
                "define": [ "CORECLR" ]
            },
            "dependencies": {
                "System.Net.NameResolution": "4.3.0"
            }
        },
        "net451": {
            "buildOptions": {
                "debugType": "full"
            }
        }
    }
}
