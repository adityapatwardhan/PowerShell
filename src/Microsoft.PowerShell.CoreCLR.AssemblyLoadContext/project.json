{
    "name": "Microsoft.PowerShell.CoreCLR.AssemblyLoadContext",
    "version": "6.0.0-*",

    "buildOptions": {
        "xmlDoc": true,
        "keyFile": "../signing/visualstudiopublic.snk",
        "delaySign": true,
        "publicSign": false,
        "warningsAsErrors": true
    },

    "configurations": {
        "Linux": {
            "buildOptions": {
                "define": [ "UNIX" ],
                "debugType": "portable"
            }
        },
        "Debug": {
            "buildOptions": {
                "debugType": "portable"
            }
        },
        "Release": {
            "buildOptions": {
                "debugType": "portable"
            }
        },
        "CodeCoverage": {
            "buildOptions": {
                "debugType": "full"
            }
        }
    },

    "frameworks": {
        "netstandard1.6": {
            "imports": [ "dnxcore50" ],
            "buildOptions": {
                "define": [ "CORECLR" ]
            },
            "dependencies": {
                "NETStandard.Library": "1.6.1",
                "System.Runtime.Loader": "4.3.0",
                "System.Reflection.Metadata": "1.4.1",
                "System.Reflection.TypeExtensions": "4.3.0",
                "System.Security.Cryptography.Algorithms": "4.3.0"
            }
        }
    }
}
